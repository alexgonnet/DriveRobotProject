<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButtonDown"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="264dp"
        android:layout_marginLeft="264dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="false"
        android:background="#000000"
        android:onClick="onButtonDownClicked"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonRight"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/down" />

    <ImageButton
        android:id="@+id/imageButtonUp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="1dp"
        android:background="#000000"
        android:onClick="onButtonLeftClicked"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonLeft"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonDown"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageButtonDown"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/up" />

    <ImageButton
        android:id="@+id/imageButtonLeft"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="149dp"
        android:background="#000000"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.517"
        app:srcCompat="@drawable/left" />

    <ImageButton
        android:id="@+id/imageButtonRight"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="248dp"
        android:layout_marginLeft="248dp"
        android:background="#000000"
        android:onClick="onButtonRightClicked"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLeft"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLeft"
        app:layout_constraintTop_toTopOf="@+id/imageButtonLeft"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/right" />

    <ImageButton
        android:id="@+id/imageButtonStart"
        android:layout_width="378dp"
        android:layout_height="382dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#000000"
        android:onClick="onButtonStartClicked"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/start" />

    <ImageButton
        android:id="@+id/imageButtonAPropos"
        android:layout_width="242dp"
        android:layout_height="187dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="#000000"
        android:onClick="onButtonAProposClicked"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonParametres"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonParametres"
        app:layout_constraintTop_toTopOf="@+id/imageButtonParametres"
        app:srcCompat="@drawable/apropos" />

    <ImageButton
        android:id="@+id/imageButtonParametres"
        android:layout_width="196dp"
        android:layout_height="225dp"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:onClick="onButtonParametresClicked"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonStart"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />
</androidx.constraintlayout.widget.ConstraintLayout>